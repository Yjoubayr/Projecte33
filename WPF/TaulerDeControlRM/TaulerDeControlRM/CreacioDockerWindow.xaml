<Window x:Class="TaulerDeControlRM.CreacioDockerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaulerDeControlRM"
        mc:Ignorable="d"
        Title="CreacioDockerWindow" Height="auto" Width="auto">

    <Grid Margin="40" >

        <ListBox x:Name="databaseListBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="208" Height="70">
            <ListBoxItem HorizontalAlignment="Center">PostgreSQL</ListBoxItem>
            <ListBoxItem HorizontalAlignment="Center">MySQL</ListBoxItem>
            <ListBoxItem HorizontalAlignment="Center">Microsoft SQL Server</ListBoxItem>
        </ListBox>

        <Button x:Name="guardarButton" Content="Guardar" HorizontalAlignment="Center" Margin="10,360,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
