<UserControl x:Class="TaulerDeControlRM.ConjuntValors"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaulerDeControlRM"
             mc:Ignorable="d">
    <Grid x:Name="gridConjunt" Height="Auto" Width="Auto" >
        <Grid.RowDefinitions>
            <!--Labels/-->
            <RowDefinition Height="*"/>
            <!--Valors/-->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--Labels/-->
        <Label x:Name="lblValue" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Content="{Binding LblValue, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        <!--Valors/-->
        <Grid x:Name="gridValues" Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</UserControl>
