             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaulerDeControlRM"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="cmbCamp" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,15,0,15" Width="120"/>
        <TextBox x:Name="txbCercadorCamp" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,15,0,15" TextWrapping="Wrap" Text="" Width="151"/>
    </Grid>
</UserControl>
