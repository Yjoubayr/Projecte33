<Page x:Class="TaulerDeControlRM.PageHistorial"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaulerDeControlRM"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageHistorial">

    <Grid>
        <TextBlock Text="Historial" Margin="5"/>
        <ListView x:Name="songListView">
            <ListView.View>
                <GridView>
                    <!-- Define columns for Name, Band, and Plays -->
                    <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Nom}" />
                    <GridViewColumn Header="Grup" DisplayMemberBinding="{Binding Grup}" />
                    <GridViewColumn Header="Data" DisplayMemberBinding="{Binding Data}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
